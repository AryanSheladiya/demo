<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".inputActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sdp_30"
                android:layout_marginTop="@dimen/sdp_10"
                android:fontFamily="@font/abhaya_libre"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sdp_30"
                android:textColor="@color/white"
                android:textSize="@dimen/ssp_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sdp_10"
                    android:layout_marginTop="@dimen/sdp_5"
                    android:text="Phone :"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ssp_20" />

                <TextView
                    android:id="@+id/txt_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sdp_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ssp_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sdp_10"
                    android:layout_marginTop="5dp"
                    android:text="E-Mail :"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ssp_20" />

                <TextView
                    android:id="@+id/txt_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sdp_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ssp_20" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="@dimen/sdp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DOB :"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ssp_20" />

                    <TextView
                        android:id="@+id/txt_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sdp_10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ssp_20" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sdp_10"
                    android:layout_marginTop="15dp"
                    android:text="Address :"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ssp_20" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sdp_10"
                    android:layout_marginRight="@dimen/sdp_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ssp_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sdp_10"
                    android:layout_marginTop="@dimen/ssp_20"
                    android:gravity="center"
                    android:text="Caste :"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ssp_20" />

                <TextView
                    android:id="@+id/txt_caste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sdp_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sdp_20" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="319dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sdp_10"
                android:layout_marginTop="@dimen/sdp_10"
                android:fontFamily="@font/archivo_black"
                android:gravity="center"
                android:text="Education"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/txt_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sdp_10"
                android:textSize="@dimen/sdp_20" />

            <TextView
                android:id="@+id/txt_callage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sdp_10"
                android:textSize="@dimen/sdp_20" />

            <TextView
                android:id="@+id/txt_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sdp_10"
                android:textSize="@dimen/sdp_20" />

            <TextView
                android:id="@+id/txt_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sdp_10"
                android:textSize="@dimen/sdp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sdp_10"
                android:layout_marginTop="@dimen/ssp_20"
                android:fontFamily="@font/archivo_black"
                android:gravity="center"
                android:text="Hobbies"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/txt_hobbies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sdp_10"
                android:textSize="@dimen/sdp_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sdp_10"
                android:layout_marginTop="@dimen/ssp_20"
                android:gravity="center"
                android:text="Job
                Expericence"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:fontFamily="@font/archivo_black" />

            <TextView
                android:id="@+id/txt_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sdp_10"
                android:textSize="@dimen/sdp_20" />

            <TextView
                android:id="@+id/txt_year_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sdp_10"
                android:textSize="@dimen/sdp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sdp_10"
                android:layout_marginTop="@dimen/ssp_20"
                android:gravity="center"
                android:text="Skills"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:fontFamily="@font/archivo_black" />

            <TextView
                android:id="@+id/txt_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sdp_10"
                android:textSize="@dimen/sdp_20" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>