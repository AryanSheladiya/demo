<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".InputActivity3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        android:background="#d3d3d3">

        <LinearLayout
            android:layout_width="215dp"
            android:layout_height="250dp"
            android:background="@color/black"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:fontFamily="@font/abhaya_libre"
                android:textColor="@color/white"
                android:textSize="@dimen/sdp_25"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sdp_10"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/ssp_20" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_marginHorizontal="@dimen/sdp_10"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/photo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sdp_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sdp_5"
                android:layout_marginTop="@dimen/sdp_10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="40dp"
                    android:src="@drawable/contect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/sdp_5"
                    android:text="CONTECT ME"
                    android:layout_marginTop="@dimen/sdp_10"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sdp_5"
                android:layout_marginTop="@dimen/sdp_5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/call" />

                <TextView
                    android:id="@+id/txt_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width= "match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sdp_5"
                android:layout_marginTop="@dimen/sdp_5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/email" />

                <TextView
                    android:id="@+id/txt_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sdp_5"
                android:layout_marginTop="@dimen/sdp_5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25sp"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_marginTop="@dimen/sdp_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sdp_5"
                android:layout_marginTop="@dimen/sdp_10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="40dp"
                    android:src="@drawable/graduate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/sdp_5"
                    android:text="EDUCATION"
                    android:layout_marginTop="@dimen/sdp_10"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/sdp_30" />

            <TextView
                android:id="@+id/txt_callage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/sdp_30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/sdp_30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/sdp_10"
                    android:text="%" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/sdp_30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/sdp_10"
                    android:text="Year" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sdp_5"
                android:layout_marginTop="@dimen/ssp_20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="40dp"
                    android:src="@drawable/job" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/sdp_5"
                    android:text="JOB EXPERIENCE"
                    android:layout_marginTop="@dimen/sdp_10"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/sdp_30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_year_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/sdp_30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/sdp_10"
                    android:text="Year" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FAFAFA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sdp_5"
            android:layout_marginTop="@dimen/sdp_20"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="40dp"
                android:src="@drawable/cast" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sdp_5"
                android:text="CASTE"
                android:layout_marginTop="@dimen/sdp_10"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_caste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/ssp_20"
            android:layout_marginLeft="@dimen/sdp_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sdp_5"
            android:layout_marginTop="@dimen/sdp_20"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="40dp"
                android:src="@drawable/dob" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sdp_5"
                android:text="DOB"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/sdp_10"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/ssp_20"
            android:layout_marginLeft="@dimen/sdp_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sdp_5"
            android:layout_marginTop="@dimen/sdp_20"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="40dp"
                android:src="@drawable/skills" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sdp_5"
                android:text="SKILL's"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_marginTop="@dimen/sdp_10"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/ssp_20"
            android:layout_marginLeft="@dimen/sdp_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sdp_5"
            android:layout_marginTop="@dimen/sdp_20"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="40dp"
                android:src="@drawable/hobb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sdp_5"
                android:text="HOBBIES"
                android:layout_marginTop="@dimen/sdp_10"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_hobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/ssp_20"
            android:layout_marginLeft="@dimen/sdp_30" />
    </LinearLayout>
</LinearLayout>