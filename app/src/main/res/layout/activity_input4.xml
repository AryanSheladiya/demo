<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".InputActivity4">

    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="match_parent"
        android:background="#4290f5"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginHorizontal="@dimen/sdp_10"
            android:layout_marginTop="@dimen/sdp_20"
            android:scaleType="centerCrop"
            android:src="@drawable/photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sdp_10"
            android:layout_marginTop="@dimen/sdp_25"
            android:text="CONTACT"
            android:textColor="@color/white"
            android:textSize="@dimen/sdp_25"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sdp_5"
            android:layout_marginTop="@dimen/sdp_5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/call" />

            <TextView
                android:id="@+id/txt_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sdp_5"
            android:layout_marginTop="@dimen/sdp_5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/sdp_5"
                android:src="@drawable/email" />

            <TextView
                android:id="@+id/txt_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/sdp_5"
            android:layout_marginTop="@dimen/sdp_5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/sdp_5"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sdp_10"
            android:layout_marginTop="@dimen/sdp_25"
            android:text="SKILL's"
            android:textColor="@color/white"
            android:textSize="@dimen/sdp_25"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sdp_10"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/ssp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sdp_10"
            android:layout_marginTop="@dimen/sdp_25"
            android:text="HOBBIES"
            android:textColor="@color/white"
            android:textSize="@dimen/sdp_25"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_hobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sdp_10"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/ssp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sdp_10"
            android:layout_marginTop="@dimen/sdp_25"
            android:text="CASTE"
            android:textColor="@color/white"
            android:textSize="@dimen/sdp_25"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_caste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sdp_10"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/ssp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sdp_10"
            android:layout_marginTop="@dimen/sdp_25"
            android:text="DOB"
            android:textColor="@color/white"
            android:textSize="@dimen/sdp_25"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sdp_10"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/ssp_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sdp_30"
            android:fontFamily="@font/abhaya_libre"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/sdp_10"
            android:textSize="@dimen/sdp_25"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_occupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="@dimen/sdp_10"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/ssp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sdp_10"
            android:layout_marginTop="50dp"
            android:text="EDUCATION"
            android:textColor="@color/black"
            android:textSize="@dimen/sdp_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sdp_10"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/ssp_20" />

        <TextView
            android:id="@+id/txt_callage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/sdp_10"
            android:textSize="@dimen/ssp_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/sdp_10"
                android:textSize="@dimen/ssp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="%"
                android:layout_marginLeft="@dimen/sdp_10"
                android:textSize="@dimen/ssp_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/sdp_10"
                android:textSize="@dimen/ssp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Year"
                android:layout_marginLeft="@dimen/sdp_10"
                android:textSize="@dimen/ssp_20" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sdp_10"
            android:layout_marginTop="35dp"
            android:text="EXPERIENCE"
            android:textColor="@color/black"
            android:textSize="@dimen/sdp_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/sdp_10"
            android:textSize="@dimen/ssp_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_year_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/sdp_10"
                android:textSize="@dimen/ssp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Year"
                android:layout_marginLeft="@dimen/sdp_10"
                android:textSize="@dimen/ssp_20" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>